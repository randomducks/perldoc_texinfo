               for ($off=0; $off < 32/$width; ++$off) {
                   $str = pack("B*", "0"x32);
                   $bits = (1<<$shift);
                   vec($str, $off, $width) = $bits;
                   $res = unpack("b*",$str);
                   $val = unpack("V", $str);
                   write;
               }
           }
       }

       format STDOUT =
       vec($_,@#,@#) = @<< == @######### @>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
       $off, $width, $bits, $val, $res
       .
